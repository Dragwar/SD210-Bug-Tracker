@{
    string currentController = ViewContext.RouteData.Values["controller"] as string ?? "Home";
    string currentAction = ViewContext.RouteData.Values["action"] as string ?? "Index";
    string currentPage = (currentController + "-" + currentAction).ToLower();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render(@"~/fonts-google")
    @Styles.Render(@"~/font-awesome")
    @Styles.Render(@"~/Content/css")
    @Styles.Render(@"~/Template/css")
    @Styles.Render(@"~/data-tables/css")
    @Styles.Render(@"~/MyContent/css")
    @Scripts.Render(@"~/bundles/modernizr")
</head>
<body>
    <span id="currentPage" class="text-hide">@currentPage</span>


    <div class="wrapper">
        <div class="sidebar" data-color="blue" data-image="@Url.Content("~/Template/assets/img/sidebar-5.jpg")">
            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple
                Tip 2: you can also add an image using data-image tag

            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    @*Update Link*@
                    <a href="#" class="simple-text">
                        Bug Tracker
                    </a>
                </div>
                <ul class="nav">
                    <li id="home-index" class="my-page-link active">
                        @*Update Link*@
                        <a href="/">
                            <i class="pe-7s-pin"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>

                    @if (User.IsInRole(nameof(BugTracker.MyHelpers.UserRolesEnum.Admin)))
                    {
                        <!--TODO: Update the li's "id" to match "controller-action"-->
                        <li class="my-page-link" id="REPLACE">
                            @*Update Link*@
                            <a href="./Template/notifications.html">
                                <i class="pe-7s-edit"></i>
                                <p>Assign User Roles</p>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole(nameof(BugTracker.MyHelpers.UserRolesEnum.Admin)) || User.IsInRole(nameof(BugTracker.MyHelpers.UserRolesEnum.ProjectManager)))
                    {
                        <li class="my-page-link" id="project-all">
                            @*Update Link*@
                            @*<a href="./Template/table.html">*@
                            <a href="#">
                                <i class="pe-7s-note2"></i>
                                <p>All Projects</p>
                            </a>
                        </li>
                    }

                    <li class="my-page-link" id="project-index">
                        @*Update Link*@
                        @*<a href="./Template/icons.html">*@
                        <a href="@Url.Action(nameof(BugTracker.Controllers.ProjectController.Index), "Project")">
                            <i class="pe-7s-notebook"></i>
                            <p>My Projects</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!--
                        @*Update Link*@
                        <a class="navbar-brand" href="#">Dashboard</a>
                        -->
                    </div>
                                <di
                        <div class="collapse navbar-collapse">
                            <!--
                            <ul class="nav navbar-nav navbar-left">
                                <li>
                                    @*Update Link*@
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-dashboard"></i>
                                    </a>
                                </li>
                            </ul>
                            -->
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </nav>


                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            @RenderBody()
                        </div>
                    </div>
                </div>


                <footer class="footer">
                    @*<div class="container-fluid">*@
                    <div>
                        <nav class="pull-left">
                            <ul>
                                <li>
                                    @*Update Link*@
                                    <a href="#">
                                        Home
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <p class="copyright pull-right">
                            @*Update Link*@
                            &copy; @DateTime.Now.Year <a href="#">Bug Tracker</a>, made for a better project management
                        </p>
                    </div>
                </footer>
            </div>
        </div>


        @Scripts.Render(@"~/bundles/jquery")
        @Scripts.Render(@"~/bundles/bootstrap")
        @Scripts.Render(@"~/Template/js")
        @Scripts.Render(@"~/data-tables/js")
        @Scripts.Render(@"~/MyContent/js")
        @RenderSection("scripts", required: false)
    </body>
</html>
